#:import GridLayout kivy.uix.gridlayout.GridLayout
#:import Button kivy.uix.button.Button
#:import ScrollView kivy.uix.scrollview.ScrollView
#:import Label kivy.uix.label.Label
#:import FloatLayout kivy.uix.floatlayout.FloatLayout
#:import Window kivy.core.window.Window

<MyCustomWidget>:
    orientation: 'vertical'

    ScrollView:
        size_hint_y: 1
        scroll_type: ['bars']
        bar_width: dp(25)
        bar_inactive_color: 0.7, 0.7, 0.7, 1
        bar_color: 0.9, 0.9, 0.9, 1
        opacity: 0 if root.show_label else 1


        GridLayout:
            cols: 3
            rows: 10
            spacing: [dp(4), dp(4)]
            padding: [dp(4), dp(4), dp(26), dp(4)]
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "Day 1"
                size_hint: 1, None
                height: self.width
                on_release: root.on_button_press(self.text)
                disabled: not root.should_enable_button(1)
